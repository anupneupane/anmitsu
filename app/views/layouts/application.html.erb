<!DOCTYPE html>
<html>
<head>
  <title>Anmitsu</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
<div id="siteholder">
  <h1><%= link_to 'Anmitsu', root_path %></h1>
  <h2>For your buisiness.</h2>
  <div id="siteWrap">
    <div class="wrapCapT">
      <% if notice %><div class="notice"><%= notice %></div><% end %>
      <% if alert %><div class="alert"><%= alert %></div><% end %>
    </div>
    <div id="middleWrap" class="clear">
      <div id="content">
        <%= yield %>
      </div>
      <div id="sidebar">
        <h4>Menu</h4>
        <ul>
          <% if current_user %>
            <li><%= link_to t('Sign out'), destroy_user_session_path %></li>
            <li><%= link_to t('Listing items'), items_path %></li>
            <li><%= link_to t('Preferences'), edit_information_path(current_user.information) %></li>
          <% else %>
            <li><%= link_to t('Sign up'), new_user_registration_path %></li>
            <li><%= link_to t('Sign in'), new_user_session_path %></li>
          <% end %>
        </ul>
      </div>
    </div>
    <div class="wrapCapT"></div>
  </div>
  <div id="footer">
    <div class="cp">&copy;2010&nbsp; ya-lab.org</div>
    <div class="by">
      Theme by <a title="Free Webtemplates" href="http://www.merlyn-buchhandlung.de/webtemplates.html">Merlyn</a>
    </div>
  </div>
</div>
<% case params[:controller] + params[:action] %>
<% when 'itemsshow' %>
<script type="text/javascript">
  var t = {confirm_state_change: '<%= t 'Are you sure item state change?' %>'}
</script>
<% end %>
<% @javascripts.each do |js| -%>
  <%= javascript_include_tag js %>
<% end -%>
</body>
</html>
