<!DOCTYPE html>
<html>
<head>
  <title>Anmitsu</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
<ul>
  <% if current_user %>
    <li><%= link_to t('Sign out'), destroy_user_session_path %></li>
    <li><%= link_to t('Listing estimations'), estimations_path %></li>
    <li><%= link_to t('Edit base information'), edit_base_info_path(current_user.base_info) %></li>
  <% else %>
    <li><%= link_to t('Sign in'), new_user_session_path %></li>
  <% end %>
</ul>
<% if notice %><div id="notice"><%= notice %></div><% end %>
<% if alert %><div id="alert"><%= alert %></div><% end %>

<%= yield %>
<% @javascripts.each do |js| -%>
  <%= javascript_include_tag js %>
<% end -%>
</body>
</html>
