<%= form_for(@estimation) do |f| %>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
    <%= f.error_message :title %>
  </div>
  <div class="field">
    <%= f.label :client_name %><br />
    <%= f.text_field :client_name %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :expire %><br />
    <%= f.text_field :expire %>
  </div>
  <div class="field">
    <%= f.label :note %><br />
    <%= f.text_area :note %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
